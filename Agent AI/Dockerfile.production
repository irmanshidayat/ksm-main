# Agent AI Production Dockerfile
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Set environment variables untuk production
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    FLASK_APP=app.py \
    FLASK_ENV=production \
    FLASK_DEBUG=0 \
    AGENT_AI_HOST=0.0.0.0 \
    AGENT_AI_PORT=5000 \
    AGENT_AI_DEBUG=false \
    DB_HOST=mysql-prod \
    DB_PORT=3306 \
    DB_NAME=KSM_main \
    DB_USER=root \
    DB_PASSWORD=password

# Install system dependencies untuk production
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    curl \
    default-libmysqlclient-dev \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements files
COPY requirements.txt ./

# Install Python dependencies untuk production
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create necessary directories untuk production
RUN mkdir -p logs data cache indexes chromadb_data redis

# Set permissions
RUN chmod +x app.py

# Create non-root user untuk security
RUN groupadd -r appuser && useradd -r -g appuser appuser
RUN chown -R appuser:appuser /app
USER appuser

# Expose port
EXPOSE 5000

# Health check untuk production
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:5000/health || exit 1

# Run the application dengan production settings
CMD ["python", "app.py"]

